
@{
    ViewBag.Title = "Index";
}

<!-- Navigation -->
<nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand page-scroll" href="#page-top">
                <i class="fa fa-play-circle"></i>  <span class="light">Innosoft</span> Web POS
            </a>
        </div>
        <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
            <ul class="nav navbar-nav">
                <li class="hidden">
                    <a href="#page-top"></a>
                </li>
                <li>
                    <a class="page-scroll" href="/Home/Index">Home</a>
                </li>
                <li>
                    <a class="page-scroll" href="/Home/Index#about">About</a>
                </li>
                <li>
                    <a class="page-scroll" href="/Home/Index#contact">Contact</a>
                </li>
                @if (Request.IsAuthenticated)
                {
                    <li>
                        <span></span>
                        <button class="btn btn-default dropdown-toggle" style="padding: 0; padding-top: 14.5px; border: none; background: none; color:#fff; display:block;" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                            WEB POS
                        </button>
                        <span></span>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="/POS/Index">Dashboard</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="/POS/Sales">Sales</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="/POS/Users">Users</a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="/POS/Setup">Setup</a></li>
                        </ul>
                    </li>
                    <li>
                        <a style="pointer-events:none"><strong>@Html.Encode(User.Identity.Name)</strong></a>
                    </li>
                    <li>
                        @using (Html.BeginForm("Logout", "Account"))
                        {
                            @Html.AntiForgeryToken()
                            <input type="submit" class="btn btn-default" style="padding: 0; padding-top: 14.5px; border: none; background: none;" title="Log off" value="Sign Out" />
                        }
                    </li>
                }
                else
                {
                    <li>
                        <a class="page-scroll" href="/Home/Index#download">POS</a>
                    </li>
                    <li>
                        @Html.ActionLink("Register", "Register", "Account")
                    </li>
                    <li>
                        @Html.ActionLink("Sign In", "Login", "Account")
                    </li>
                }
            </ul>

        </div>
    </div>
</nav>

<header class="intro">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="row">
                    <div class="col-lg-4 col-md-4">
                        <a href="#">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <i class="fa fa-user fa-5x"></i>
                                        </div>
                                        <div class="col-xs-9 text-right">
                                            @*<div class="huge" id="UsersCounts">&nbsp;<i class="fa fa-spinner fa-spin"></i></div>*@
                                            @*<div>Users</div>*@
                                        </div>
                                    </div>
                                </div>
                                <div class="panel-footer">
                                    <h4><span class="pull-left">USERS</span></h4>
                                    @*<span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>*@
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <a href="#">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <i class="fa fa-tasks fa-5x"></i>
                                        </div>
                                        <div class="col-xs-9 text-right">
                                            @*<div class="huge" id="SetupCounts">&nbsp;<i class="fa fa-spinner fa-spin"></i></div>*@
                                            @*<div>Setup</div>*@
                                        </div>
                                    </div>
                                </div>
                                <div class="panel-footer">
                                    <h4><span class="pull-left">SETUP</span></h4>
                                    @*<span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>*@
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <a href="~/POS/Sales">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <i class="fa fa-shopping-cart fa-5x"></i>
                                        </div>
                                        <div class="col-xs-9 text-right">
                                            @*<div class="huge" id="SalesCounts">&nbsp;<i class="fa fa-spinner fa-spin"></i></div>*@
                                            @*<div>Sales</div>*@
                                        </div>
                                    </div>
                                </div>

                                <div class="panel-footer">
                                    <h4><span class="pull-left">SALES</span></h4>
                                    @*<span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>*@
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Display -->
<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/jquery.easing.min.js"></script>
<script src="/js/grayscale.js"></script>
