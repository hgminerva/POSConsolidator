<section id="grid" class="container content-section-pos text-center">
    <div class="row">
        <div class="col-lg-12">
            <div id="POSGrid" class="grid"><i class="fa fa-spinner fa-spin"></i></div>
        </div>
    </div>
</section>

<script type="text/javascript">
    $(document).ready(function () {

        var SalesData = new wijmo.collections.ObservableArray();

        $.ajax({
            url: '/api/TrnSales',
            cache: false,
            type: 'GET',
            contentType: 'application/json; charset=utf-8',
            data: {},
            success: function (Results) {
                if (Results.length > 0) {
                    // Remove spinner
                    $("#POSGrid").empty();

                    // Get Data
                    for (i = 0; i < Results.length; i++) {
                        SalesData.push({
                            User: "Innosoft",
                            Id: Results[i]["Id"],
                            SalesDate: Results[i]["SalesDate"],
                            SalesNumber: Results[i]["SalesNumber"],
                            ORNumber: Results[i]["ORNumber"],
                            Amount: Results[i]["Amount"],
                            VATSales: Results[i]["VATSales"],
                            NonVATSale: Results[i]["NonVATSale"],
                            VATAmount: Results[i]["VATAmount"]
                        });
                    }

                    // Create collection view
                    var Sales = new wijmo.collections.CollectionView(SalesData);

                    Sales.pageSize = 15;

                    // Create grid
                    var SalesGrid = new wijmo.grid.FlexGrid('#POSGrid');

                    SalesGrid.initialize({
                        columns: [
                                    {
                                        "header": "Tenant",
                                        "binding": "User",
                                        "width": 100,
                                        "allowSorting": false,
                                        "isContentHtml": true
                                    },
                                    {
                                        "header": "Date",
                                        "binding": "SalesDate",
                                        "width": 100,
                                        "allowSorting": false,
                                        "isContentHtml": true
                                    },
                                    {
                                        "header": "OR No.",
                                        "binding": "ORNumber",
                                        "allowSorting": false,
                                        "width": '2*'
                                    },
                                    {
                                        "header": "SI No.",
                                        "binding": "SalesNumber",
                                        "allowSorting": false,
                                        "width": '2*'
                                    },
                                    {
                                        "header": "Amount",
                                        "binding": "Amount",
                                        "allowSorting": false,
                                        "width": 100
                                    },
                                    {
                                        "header": "VAT Sales",
                                        "binding": "VATSales",
                                        "allowSorting": false,
                                        "width": 100
                                    },
                                    {
                                        "header": "Non-VAT Sales",
                                        "binding": "NonVATSale",
                                        "allowSorting": false,
                                        "width": 100
                                    },
                                    {
                                        "header": "VAT Amount",
                                        "binding": "VATAmount",
                                        "allowSorting": false,
                                        "width": 100
                                    }
                        ],
                        autoGenerateColumns: false,
                        itemsSource: Sales,
                        isReadOnly: true,
                        selectionMode: wijmo.grid.SelectionMode.Row

                    });

                    SalesGrid.trackChanges = true;

                } else {
                    alert("No data.");
                }
            }
        }).fail(
            function (xhr, textStatus, err) {
                alert(err);
            }
        );

    });
</script>

